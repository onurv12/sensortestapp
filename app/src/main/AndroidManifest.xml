<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onurv.sensortestapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Proximity"
            android:label="@string/title_activity_proximity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProximityActivity"
            android:label="@string/title_activity_proximity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AccelerometerActivity"
            android:label="@string/title_activity_accelerometer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".GyroscopeActivity"
            android:label="@string/title_activity_gyroscope"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".BarometerActivity"
            android:label="@string/title_activity_barometer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AmbientLightActivity"
            android:label="@string/title_activity_ambient_light"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RotationActivity"
            android:label="@string/title_activity_rotation"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
